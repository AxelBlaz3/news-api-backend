// tsconfig.json
{
  "compilerOptions": {
    "target": "es2022", // Or "es2020", "es2021", "esnext" for modern Node.js
    "module": "commonjs", // For Node.js, CommonJS is standard
    "rootDir": "./src", // Your source files will be in a 'src' directory
    "outDir": "./dist", // Compiled JavaScript will go into a 'dist' directory
    "esModuleInterop": true, // Allows default imports for CommonJS modules (like Express)
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing
    "strict": true, // Enable all strict type-checking options (highly recommended)
    "skipLibCheck": true, // Skip type checking of declaration files (faster compilation)
    "noImplicitAny": true, // Disallow 'any' types that aren't explicitly typed
    "resolveJsonModule": true, // Allows importing .json files
    "sourceMap": true // Generate source maps for debugging
  },
  "include": ["src/**/*.ts"], // Include all .ts files in the src directory
  "exclude": ["node_modules"] // Exclude node_modules from compilation
}
